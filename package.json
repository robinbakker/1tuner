{
  "private": true,
  "name": "1tuner",
  "version": "2.5.4",
  "description": "1 web app to listen to radio and podcasts",
  "author": "Robin Bakker",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "cross-env NODE_OPTIONS=--openssl-legacy-provider preact build --prerenderUrls ./prerender-urls.js --template template.html",
    "serve": "preact build && preact serve",
    "dev": "cross-env NODE_OPTIONS=--openssl-legacy-provider preact watch --template template.html"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "if-env": "^1.0.4",
    "normalize-url": "^8.0.1",
    "postcss": "8.4.38",
    "preact-cli": "^3.5.1",
    "preact-render-to-string": "^6.4.2"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "idb-keyval": "^6.2.1",
    "preact": "^10.20.2",
    "preact-router": "^4.1.2"
  },
  "prettier": {
    "trailingComma": "es5",
    "printWidth": 150,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  }
}
